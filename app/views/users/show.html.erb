<div class="row">
<% @blogs.each do |blog| %>
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= simple_format(blog.name) %></span>
        <p><%= simple_format(blog.text) %></p>
      </div>
      <div class="card-action">
        <%= link_to 'edit', "/miniapp/#{blog.id}/edit", method: :get %>
        <%= link_to 'delete', "/miniapp/#{blog.id}", method: :delete %>
      </div>
    </div>
  </div>
<% end %>
</div>