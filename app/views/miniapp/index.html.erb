<div class="row">
  <% @blogs.each do |blog| %>
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= simple_format(blog.name) %></span>
          <p><%= simple_format(blog.text) %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>